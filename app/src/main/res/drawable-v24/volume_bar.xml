<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#96444444"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item
        android:id="@+id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">

            <shape>
                <corners
                    android:radius="10dp"/>
                <gradient
                    android:startColor="#F48421"
                    android:centerColor="#F48421"
                    android:endColor="#F48421"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>
</layer-list>