                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Length"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="?attr/secTxtColor"/>

                <TextView
                    android:id="@+id/IFileLengthTxt"
